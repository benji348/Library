<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_pinterest"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_pinterest_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".webview.webViewActivity"/>
        <activity
            android:name=".books_activities.favoriteBooksActivity"
            android:label="@string/favoriteBookDetails" />
        <activity
            android:name=".books_activities.currentlyReadingBooksActivity"
            android:label="@string/currentlyReandingBook" />
        <activity
            android:name=".books_activities.wantToReadBooksActivity"
            android:label="@string/wantToReadBook" />
        <activity
            android:name=".books_activities.alreadyReadActivity"
            android:label="@string/alreadyReadBook" />
        <activity
            android:name=".books_activities.BookActivity"
            android:label="@string/bookDetails" />
        <activity
            android:name=".books_activities.allBooksActivity"
            android:label="@string/allbooks" />
        <activity android:name=".main.MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>